          inset 0 0 12px rgba(0, 204, 255, 0.2),
          inset 0 0 6px rgba(180, 220, 255, 0.15);
        transition:
          box-shadow 0.3s ease,
          border-radius 0.2s ease-out;
        animation: blobMorph 3.6s ease-in-out infinite;
      }

      #author-image-wrap img:hover {
        box-shadow:
          0 0 16px rgba(180, 220, 255, 0.6),
          0 0 32px rgba(0, 204, 255, 0.5),
