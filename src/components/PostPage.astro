---
import Comments from '@components/Comments.astro'
import NavBtn from '@components/NavBtn.astro'
import PageFooter from '@components/PageFooter.astro'
import PageHead from '@components/PageHead.astro'
import PageHeader from '@components/PageHeader.astro'
import type { PageProps } from '@interfaces/PageProps'
import { getLocalIsoTimestamp } from '../functions/posts'

const {
  title = '',
  description = '',
  featuredImage = '',
  keywords = '',
  post
} = Astro.props as PageProps

const datePublished: string = getLocalIsoTimestamp(post.publishedDate)
const dateModified: string = getLocalIsoTimestamp()

const postSchema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  image: [featuredImage],
  datePublished: datePublished,
  dateModified: dateModified,
  author: [
    {
      '@type': 'Person',
      name: 'Igor DimitrijeviÄ‡',
      url: 'https://igorskyflyer.me/blog/author/igorskyflyer'
    }
  ]
}
---

<!doctype html>
<html lang="en">
  <PageHead
    title={title}
    description={description}
    keywords={keywords}
    featuredImage={featuredImage}>
    <script
      type="application/ld+json"
      set:html={JSON.stringify(postSchema)}
    />
  </PageHead>
  <body>
    <PageHeader />
    <main>
      <slot />
      <Comments />
    </main>
    <NavBtn />
    <PageFooter />
  </body>
</html>
